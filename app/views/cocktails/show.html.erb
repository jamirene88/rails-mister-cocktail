<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url(<%= @cocktail.photo%>);">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    <p>
      <% @cocktail.doses.each do |dose| %>
        <%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
        <% end %><br>
      <% end %><br>


    </p>

    <%= link_to "+ add a dose", new_cocktail_dose_path(@cocktail) %><br>
    <%= link_to "Back to all cocktails", cocktails_path %>
  </div>
</div>


