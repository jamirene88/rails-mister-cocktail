<div class="container">
<h1>Add a new dose</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %><br>
    <%= f.input :description %><br>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
   <%= link_to "Back to all cocktails", cocktails_path %> <br>
</div>
